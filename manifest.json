{
  "manifest_version": 2,
  "name": "Forge Spotlight",
  "version": "0.1",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://build.betaui.azuqua.com/*"
      ],
      "js": ["content.js"],
      "css": ["forgeSearch.css"]
    }
  ],
  "icons": { 
    "16": "icon16.png",
    "32": "icon48.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}